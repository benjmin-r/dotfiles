[general]
ui = ttyui
accounts = personal, work, work-new
pythonfile=~/.mutt/offlineimap.py
fsync = False


[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"



[Account personal]
localrepository = personal-local
remoterepository = personal-remote
status_backend = sqlite

[Repository personal-local]
type = Maildir
localfolders = ~/.mail/personal

[Repository personal-remote]
maxconnections = 1
type = IMAP
remotehost = arcturus.uberspace.de
remoteuser = bnjmin-benjamin
remotepasseval = get_keychain_pass('bnjmin-benjamin', 'arcturus.uberspace.de')
ssl = yes
cert_fingerprint = afe378d8c458fb9be4c8601b7b3864664156d9f2
folderfilter = lambda folder: folder not in ['Trash', 
                                             'Junk', ]



[Account work]
localrepository = work-local
remoterepository = work-remote
status_backend = sqlite
filterheaders = Disposition-Notification-To

[Repository work-local]
type = Maildir
localfolders = ~/.mail/work
nametrans = lambda folder: {'Sent':             'Sent Items',
                            'Trash':            'Deleted Items',
                            }.get(folder, folder)

[Repository work-remote]
maxconnections = 1
type = IMAP
remotehost = outlook.office365.com
remoteuser = benjamin.reitzammer@vaamo.de
remotepasseval = get_keychain_pass('benjamin.reitzammer@vaamo.de', 'outlook.office365.com')
sslcacertfile = ~/certs.pem
ssl = yes
nametrans = lambda folder: {'Sent Items':       'Sent',
                            'Deleted Items':    'Trash',
                            }.get(folder, folder)
folderfilter = lambda folder: folder not in ['Calendar', 
                                             'Outbox',
                                             'Clutter',
                                             'Junk',
                                             'Deleted Items',
                                             'Conversation History',
                                             'Tasks',
                                             'Junk Email',
                                             'Notes',
                                             'Journal',
                                             'Contacts', ]

[Account work-new]
localrepository = work-new-local
remoterepository = work-remote
status_backend = sqlite
filterheaders = Disposition-Notification-To

[Repository work-new-local]
type = Maildir
localfolders = ~/.mail/work-new
nametrans = lambda folder: {'Sent':             'Sent Items',
                            'Trash':            'Deleted Items',
                            }.get(folder, folder)

