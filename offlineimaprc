fsync = False


[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"


[Account ambestengestern.de]
localrepository = ambestengestern.de-Local
remoterepository = ambestengestern.de-Remote
status_backend = sqlite
postsynchook = notmuch new

[Repository ambestengestern.de-Local]
type = Maildir
