let mapleader = ","

map <leader>lv :source ~/.vimperatorrc<CR>
nnoremap k 5k
nnoremap j 5j
map <C-l> :tabnext<CR>
map <C-h> :tabprevious<CR>
map <leader>n :noh<CR>

" make textareas editable in macvim
set editor='bash -lc "mvim -f \$*" mvim '
set titlestring=""
set gui=noaddons,nobookmarks,nomenu,nonavigation,tabs
set status=input,location,ssl
set notabnumbers
set defsearch=google
set showstatuslinks=2

" no search engine completions
set complete=l

" no close buttons on tabs
set! browser.tabs.closeButtons=2

" Find
"" perform incremental searching
set incsearch
"" highlight search results
set hlsearch
"" typically (see below) ignore case
set ignorecase
"" only consider case if an upper case char is used
set smartcase

colorscheme solarized_dark
hi Normal -append font-size: 13px !important; font-family: "Menlo";
hi StatusLine -append font-size:13px; font-family: "Menlo";

qmark p https://www.playframework.com/documentation/2.3.x/ScalaHome
qmark p https://github.com/playframework/playframework/
qmark l http://localhost:9000/
qmark L http://localhost:8000/
qmark k http://localhost:4000/
qmark m http://www.mutt.org/doc/manual/manual-4.html#patterns
qmark w https://wiki.vaamo-ag.de/dashboard.action
qmark h https://wiki.vaamo-ag.de/display/VAAMO/Holidays
qmark s https://www.softwerkskammer.org/
qmark v https://github.com/Vaamo
qmark c https://outlook.office365.com/owa/?realm=vaamo.de#path=/calendar/view/Week

