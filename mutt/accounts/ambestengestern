# vi: ft=muttrc

source ~/.mutt/muttrc

#color status green default
#source ~/.mutt/mailboxes

set pgp_sign_as = 7600BD53

mailboxes "+ambestengestern.de/INBOX" \
          "+ambestengestern.de/lists" \
          "+ambestengestern.de/Drafts" \
          "+ambestengestern.de/Archive" \
          "+ambestengestern.de/Sent" \
          "+ambestengestern.de/rss" \
          "+ambestengestern.de/root" \
          "+ambestengestern.de/sc" \
          "+ambestengestern.de/sc.SC" \
          "+ambestengestern.de/leadership_sparks" \
          "+ambestengestern.de/fail2ban" \
          "+ambestengestern.de/Trash" \
          "+ambestengestern.de/Junk"


set header_cache     = ~/.mutt/cache/abg-headers # where to store headers
set message_cachedir = ~/.mutt/cache/abg-bodies  # where to store bodies
set spoolfile = "+ambestengestern.de/INBOX"
set smtp_pass = "`python ~/.mutt/offlineimap.py "bnjmin-benjamin" "arcturus.uberspace.de"`"
set smtp_url = "smtp://bnjmin-benjamin@arcturus.uberspace.de:587"

macro index,pager y "<save-message>=ambestengestern.de/Archive<enter>" "Archive"
macro index,pager L "<save-message>=ambestengestern.de/lists<enter>" "Move to 'lists' folder"
macro index,pager d "<save-message>=ambestengestern.de/Trash<enter>" "Trash"

macro index gi "<change-folder>+ambestengestern.de/INBOX<enter>" "Jump to Inbox"
macro pager gi "<change-folder>+ambestengestern.de/INBOX<enter>" "Jump to Inbox"
macro index ga "<change-folder>+ambestengestern.de/Archive<enter>" "Jump to Archive"
macro pager ga "<change-folder>+ambestengestern.de/Archive<enter>" "Jump to Archive"
macro index gs "<change-folder>+ambestengestern.de/Sent<enter>" "Jump to Sent"
macro pager gs "<change-folder>+ambestengestern.de/Sent<enter>" "Jump to Sent"


set from      = "benjamin@ambestengestern.de"
set record    = "+ambestengestern.de/Sent"
set mbox      = "+ambestengestern.de/Archive"
set postponed = "+ambestengestern.de/Drafts"


alternates benjamin@nur-eine-i.de breitzammer@gmail.com, benjamin@squeakyvessel.com

alias identity_1    Benjamin Reitzammer <benjamin@ambestengestern.de>
alias identity_2    Benjamin Reitzammer <benjamin@squeakyvessel.com>
macro compose v "<edit-from>^Uidentity_<tab>" "Select from (1=abg, 2=sq)" 

# Sync email
macro index F "<shell-escape>offlineimap -a ambestengestern.de<enter>"           "run offlineimap to sync all mail"
macro index f "<shell-escape>offlineimap -qf INBOX -a ambestengestern.de<enter>" "run offlineimap to sync inbox"

