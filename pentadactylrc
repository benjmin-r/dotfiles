map <space> <leader>

" disable macro recording ... i hit this way too often incidently
map -arg q <nop>  

map <leader>lv :source ~/.pentadactylrc<CR>
nnoremap k 5k
nnoremap j 5j
map <C-l> :tabnext<CR>
map <C-h> :tabprevious<CR>
map <leader>n :noh<CR>
map -arg <leader>b :buffer <arg><CR>

" make textareas editable in macvim
set editor='bash -lc "mvim -f \$*" mvim '
set titlestring=""
set guioptions=bCrsn

" passkeys to certain webapp
set passkeys+=trello.com:@#^abcdfxqvnslte?123456<><space><left><right><up><down><Esc><cr>
set passkeys+=wiki.vaamo-ag.de:ec

colorscheme solarized-dark
hi FontFixed -a font-size:13px !important; font-family:"Menlo" !important;
